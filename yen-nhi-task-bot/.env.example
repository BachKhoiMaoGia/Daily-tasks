# Environment Variables Template
# Copy this file to .env and fill in your actual values

# OpenAI/GitHub Models API
OPENAI_API_KEY=your_openai_or_github_api_key_here
OPENAI_BASE_URL=https://api.openai.com/v1

# HuggingFace (Speech-to-Text)
HUGGINGFACE_API_KEY=your_huggingface_key_here
HUGGINGFACE_WHISPER_MODEL=openai/whisper-large-v3
STT_PROVIDER=whisper

# Server & System
PORT=3000
LOG_LEVEL=info
FFMPEG_PATH=/usr/bin/ffmpeg
AUDIO_TMP=/tmp
MAX_AUDIO_MIN=10

# Zalo Bot Configuration
ZALO_COOKIE_PATH=.cookies.txt
BOSS_ZALO_ID=your_boss_zalo_id_here

# Google Calendar & Tasks
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_REDIRECT_URI=https://your-app.render.com/gcal/oauth
GOOGLE_REFRESH_TOKEN=your_refresh_token_here

# Features
USE_LLM=false
HUGGINGFACE_API_KEY=
HUGGINGFACE_WHISPER_MODEL=openai/whisper-large-v2
